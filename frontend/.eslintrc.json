{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "prettier"
    ],
    "plugins": [
        "react",
        "react-hooks",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "ignorePatterns": [
        "**/_tests__/*.ts",
        "**/_tests__/*.tsx",
        "**/_fixtures__/*.ts",
        "**/_fixtures__/*.tsx"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "tabWidth": 4,
                "semi": false,
                "singleQuote": true
            }
        ]
    }
}